<MudGrid Style="max-height:71px;">
    <MudItem xs="4" sm="4" md="4" lg="3">
        <MudText Class="mt-5" Typo="Typo.subtitle2" Align="Align.Right">@Label</MudText>
    </MudItem>
    <MudItem xs="8" sm="8" md="8" lg="9">
        <MudSelect @bind-Value="@Gender" SelectedValuesChanged="(IEnumerable<string> e) => OnChanged(e)" Dense="true"
                   Label="Select Gender" OffsetY="true"
                   Required="@Required" RequiredError="@RequiredError" For="@For"
                   @bind-Error="Error" @bind-ErrorText="ErrorText" >
            <MudSelectItem Value="@("Male")">Male</MudSelectItem>
            <MudSelectItem Value="@("Female")">Female</MudSelectItem>
            <MudSelectItem Value="@("Other")">Other</MudSelectItem>
        </MudSelect>
    </MudItem>
</MudGrid>