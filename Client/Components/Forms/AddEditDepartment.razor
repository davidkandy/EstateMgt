<EditForm Model="@Department" OnValidSubmit="OnSubmit">
    <MudCard Elevation="5">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Department Information</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="12" md="6" lg="6">
                    <TextboxBase Label="Department Name" @bind-Text="Department.Name" Required="true" RequiredError="Department Name is required!" />
                    <TextboxBase Label="Description" @bind-Text="Department.Description" MultiLine="true" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="MudBlazor.ButtonType.Submit" Variant="Variant.Filled" Color="Color.Secondary">Submit</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>
