<EditForm Model="@Company" OnValidSubmit="OnSubmit">
    <MudCard Elevation="5">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Purchase Order</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="12" md="6" lg="6">
                    <DatePickerBase Label="Order Date" @bind-bind-DateValue="Company.Logo" />
                    <TextboxBase Label="Supplier" @bind-Text="Company.Name" Required="true" RequiredError="Supplier Name is required!" />
                    <TextboxBase Label="Description" @bind-Text="Company.Description" MultiLine="true" />
                    <AddressInput Label="Address" @bind-Street="Company.Street" @bind-City="Company.City"
                                  @bind-PostalCode="Company.PostalCode" @bind-State="Company.State" @bind-Country="Company.Country" />
                </MudItem>
                <MudItem xs="12" sm="12" md="6" lg="6">
                    <TextboxBase Label="Total Amount" @bind-Text="Company.Description" />
                    <TextboxBase Label="Order Status" @bind-Text="Company.Country" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="MudBlazor.ButtonType.Submit" Variant="Variant.Filled" Color="Color.Secondary">Submit</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>