<EditForm Model="@CompanyDetail" OnValidSubmit="OnSubmit">
    <MudCard Elevation="5">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Company Detail Information</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="12" md="6" lg="6">
                    <TextboxBase Label="Name" @bind-Text="CompanyDetail.Name" Required="true" RequiredError="Name is required!" />
                    <TextboxBase Label="Description" @bind-Text="CompanyDetail.Description" MultiLine="true" Lines="5"/>
                    <TextboxBase Label="Summary" @bind-Text="CompanyDetail.Summary" MultiLine="true" Lines="2"/>
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="MudBlazor.ButtonType.Submit" Variant="Variant.Filled" Color="Color.Secondary">Submit</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>