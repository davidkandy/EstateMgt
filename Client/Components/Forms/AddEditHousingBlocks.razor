<EditForm Model="@HousingBlock">
    <DataAnnotationsValidator/>
    <MudCard Elevation="5">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Housing Block Information</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="12" md="12" lg="9" Style="height: 600px">
                    <MudGrid>
                        <MudItem xs="12" sm="12" md="6" lg="6">
                            <TitleSelector Label="Name" @bind-Name="HousingBlock.Name" Required="true" RequiredError="Name is Required!" For="(() => HousingBlock.Name)"/>
                            <TextboxBase Label="Description" @bind-Text="HousingBlock.Description" Required="true" RequiredError="DescriptionAttribute is Required!" For="(() => HousingBlock.Description)"/>
                            <TextboxBase Label="Status" @bind-Text="HousingBlock.Status" Required="true" RequiredError="Status is Required" For="(() => HousingBlock.Status)"/>
                            <MudTextField T="int" Label="Number Of Units" @bind-Number="HousingBlock.NumberOfUnits" Required="true" RequiredError="Number of Units is Required" For="(() => HousingBlock.NumberOfUnits)"></MudTextField>
                        </MudItem>
                    </MudGrid>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</EditForm>