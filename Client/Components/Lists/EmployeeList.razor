<MudCard Elevation="5">
    <MudCardContent>
        <MudTable Items="@Employees" Dense="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Employees</MudText>
                <MudSpacer />
                <MudTextField T="string" Placeholder="Search" Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Department</MudTh>
                <MudTh>Job Title</MudTh>
                <MudTh>Email</MudTh>
                <MudTh>Phone</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.FullName</MudTd>
                <MudTd DataLabel="Department">@context.Department</MudTd>
                <MudTd DataLabel="Job Title">@context.Job</MudTd>
                <MudTd DataLabel="Email">@context.Email</MudTd>
                <MudTd DataLabel="Phone">@context.Phone1</MudTd>
                <MudTd><MudButton OnClick="()=> OnSelectEmployee(context.Id)" Variant="Variant.Filled" StartIcon="@Icons.Filled.Edit">Edit</MudButton></MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </MudCardContent>
</MudCard>
